{
  "name": "service.faulty_deployment: ${service_name} ${env}",
  "type": "event-v2 alert",
  "query": "events(\"tags:(deployment_analysis \"env:${env}\" \"service:${service_name}\") \").by(\" version\").rollup(\"count\").last(\"70m\") > ${faulty_deployment_critical_threshold}",
  "message": "Anomalous errors were detected in the latest deployment ${service_name} in env:${env}. Runbook: ${runbook_url} Notify: ${notification_targets}",
  "options": {
    "notify_audit": false,
    "silenced": {},
    "enable_logs_sample": false,
    "thresholds": {
      "critical": "${faulty_deployment_critical_threshold}"
    },
    "new_host_delay": 300,
    "on_missing_data": "show_no_data",
    "include_tags": true,
    "groupby_simple_monitor": false,
    "restriction_query": null
  },
  "tags": [
    "service:${service_name}",
    "env:${env}",
    "type:automated"
  ]

  
}