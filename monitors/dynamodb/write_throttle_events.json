{
	"name": "dynamodb.write_throttle_events: ${table_name}",
	"type": "metric alert",
	"query": "sum(${dynamodb_write_throttle_timeframe}):sum:aws.dynamodb.write_throttle_events{tablename:${table_name}} by {tablename} ${dynamodb_write_throttle_operator} ${dynamodb_write_throttle_critical}",
	"message": "dynamodb write throttle event monitor triggered for ${table_name}. Notify: ${notification_targets}",
	"options": {
		"notify_audit": false,
		"locked": false,
		"timeout_h": 0,
		"require_full_window": false,
		"notify_no_data": false,
		"renotify_interval": "0",
		"evaluation_delay": 900,
		"thresholds": {
			"critical": "${dynamodb_write_throttle_critical}"
		}
	}
}